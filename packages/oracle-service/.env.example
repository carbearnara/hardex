# Server configuration
PORT=8080
UPDATE_INTERVAL_MS=30000
PRICE_CHANGE_THRESHOLD=0.005
TWAP_WINDOW_MS=300000

# Mode selection (pick one):
# DEMO_MODE=true   - Use simulated mock data (default)
# SCRAPE_MODE=true - Scrape real prices from Best Buy & Newegg (no API keys needed)

DEMO_MODE=false
SCRAPE_MODE=true

# eBay API credentials
# Get from: https://developer.ebay.com/
EBAY_APP_ID=
EBAY_CERT_ID=

# Amazon Product Advertising API
# Get from: https://affiliate-program.amazon.com/
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_PARTNER_TAG=

# Best Buy API
# Get from: https://developer.bestbuy.com/
BESTBUY_API_KEY=

# Logging
LOG_LEVEL=info

# Proxy Configuration (for bypassing scraper detection)
# Comma-separated list of proxy URLs
# Supported formats:
#   - HTTP/HTTPS: http://user:pass@host:port or http://host:port
#   - SOCKS5: socks5://user:pass@host:port or socks5://host:port
#   - SOCKS4: socks4://host:port
# Example: PROXY_URLS=http://proxy1:8080,socks5://proxy2:1080
PROXY_URLS=

# Enable proxy rotation for scrapers (true/false)
USE_PROXY=false
